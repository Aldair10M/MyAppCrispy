# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Email configuration
# Enable/disable email sending. When false or creds missing, send is skipped (no error)
EMAIL_ENABLED=true
# If true, registration fails when email sending fails
EMAIL_STRICT=false

# Option A: Gmail (requires 2FA + App Password)
# GMAIL_USER=your_gmail_address@gmail.com
# GMAIL_PASS=your_app_password_here

# Option B: Custom SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_pass

# FROM_EMAIL="Mr. Crispy <your_email@gmail.com>"

# Default sender address (optional, falls back to GMAIL_USER)
# FROM_EMAIL=Mr Crispy <no-reply@yourdomain.com>

BASE_URL=http://localhost:3000

# Server Configuration
PORT=3000
NODE_ENV=development